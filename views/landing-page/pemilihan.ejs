<!-- Image Showcases-->
<section class="showcase" style="margin-top: 4rem;">
    <div class="container-fluid">
        <div class="row g-0">
            <div class="col-lg-4 order-lg-2 text-white showcase-img" style="background-image: url('/public/landing-page/assets/img/bg-masthead.jpg')">
                <div class="position-relative start-0 p-2" style="top: 5%">
                    <% if (pemilihan.statusPemilihan == 'akan berlangsung') { %>
                        <h3>Pemilihan Belum Dimulai</h3>
                        <% } else if ((pemilihan.statusPemilihan == 'sedang berlangsung')) { %>
                            <h3>Pemilihan Sedang Berlangsung</h3>
                            <form action="#" method="post">
                                <div class="mb-3">
                                    <label class="fs-6" for="">Nama</label>
                                    <input class="form-control" type="text" name="nama" id="nama">
                                </div>
                                <div class="col-12 d-grid mb-3">
                                    <button class="btn btn-primary" type="submit">Mulai</button>
                                    <p id="sifatPemilihan"></p>

                                </div>
                            </form>
                            <% } else if ((pemilihan.statusPemilihan == 'telah berakhir')) { %>
                                <h3>Pemilihan Telah Berakhir</h3>
                                <% } %>
                                    <p class="d-none" id="waktuAwal">
                                        <%= pemilihan.waktuPelaksanaan.awal.toISOString() %>
                                    </p>
                                    <p class="d-none" id="waktuAkhir">
                                        <%= pemilihan.waktuPelaksanaan.akhir.toISOString() %>
                                    </p>
                                    <p id="countdown"></p>

                </div>
            </div>
            <div class="col-lg-8 order-lg-1 my-auto p-3">
                <%- pemilihan.deskripsi %>
                    <!-- <h2>Fully Responsive Design</h2>
                <p class="lead mb-0">When you use a theme created by Start Bootstrap, you know that the theme will look great on any device, whether it's a phone, tablet, or desktop the page will behave responsively!</p> -->
            </div>
        </div>
    </div>
</section>