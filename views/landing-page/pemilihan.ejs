<!-- Navigation-->
<nav class="navbar navbar-expand-sm navbar-light bg-light fixed-top mb-5">
    <div class="container-fluid">
        <a class="navbar-brand site_title fs-6" href="/<%= pemilihan.slug %>">
            <i class="fa fa-paw"></i>
            <%= pemilihan.namaPemilihan %>
                <!-- <img src="/public/production/images/" alt="" width="30" height="24"> -->
        </a>

        <% if (pemilihan.modeGroup) { %>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <% pemilihan.fieldGroup.forEach((grup, index) => { %>

                        <% if (pemilihan.fieldGroup.length == 1) { %>
                            <a class="nav-link active px-4 border-start border-end" aria-current="page" href="/">
                                <%= grup %>
                            </a>
                            <% } else if (pemilihan.fieldGroup.length == 2) { %>
                                <% if (index === 0) { %>
                                    <a class="nav-link active px-4 border-start" aria-current="page" href="/">
                                        <%= grup %>
                                    </a>
                                    <% } else { %>
                                        <a class="nav-link active px-4 border-start border-end" aria-current="page" href="/">
                                            <%= grup %>
                                        </a>
                                        <% } %>
                                            <% } else { %>
                                                <% if (index === 0) { %>
                                                    <a class="nav-link active px-4 border-start" aria-current="page" href="/">
                                                        <%= grup %>
                                                    </a>
                                                    <% } else if (pemilihan.fieldGroup.length - 1 === index) { %>
                                                        <a class="nav-link active px-4 border-end" aria-current="page" href="/pemilihan">
                                                            <%= grup %>
                                                        </a>
                                                        <% } else { %>
                                                            <a class="nav-link active px-4 border-start border-end" aria-current="page" href="/">
                                                                <%= grup %>
                                                            </a>
                                                            <% } %>
                                                                <% } %>

                                                                    <!-- end each -->
                                                                    <% }) %>
                </div>
            </div>
            <% } %>
                <!-- <div class="d-flex">
            <a class="btn btn-primary" href="/dashboard">Buat Akun</a>
        </div> -->
    </div>
</nav>

