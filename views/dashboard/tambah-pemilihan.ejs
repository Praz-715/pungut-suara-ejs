<div class="right_col" role="main">
    <div class="page-title">
        <div class="title_left">
            <a href="/dashboard">
                <h3>Dashboard</h3>
            </a>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Buat Pemilihan <small>baru</small></h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="demo-form2" action="/dashboard/tambah-pemilihan" method="post" class="form-horizontal form-label-left">

                        <div class="form-group" style="margin-bottom: 20px;">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Nama Pemilihan <span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="first-name" name="namaPemilihan" required="required" class="form-control col-md-7 col-xs-12" placeholder="Contoh: Pemilihan Kutua Kelas">
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 20px;">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Sifat Pemilihan <span class="required">*</span></label>
                            <div class="col-md-6 col-sm-6 col-xs-12">

                                <label for="sifatTerbuka" class="btn btn-default" data-toggle-class="btn-primary" data-toggle-passive-class="btn-primary">
                                        <input type="radio" name="sifatPemilihan" value="terbuka" id="sifatTerbuka">
                                        Terbuka</label>
                                <label for="sifatTertutup" class="btn btn-default" data-toggle-class="btn-primary" data-toggle-passive-class="btn-primary">
                                        <input type="radio" name="sifatPemilihan" value="tertutup" id="sifatTertutup">
                                        Tertutup</label>
                                <button type="button" class="btn btn-default ml-5" style="border: none;" onclick="new PNotify({
                                            title: 'Sifat Pemilihan',
                                            text: 'Tertutup berarti anda sebagai admin akan mementukan siapa saja orang yang dapat memlilih\nTerbuka berarti siapa saja bisa berpartisipasi dalam pemilihan yang anda buat',
                                            type: 'info',
                                            styling: 'bootstrap3'
                                        });"><i class="fa fa-exclamation-circle"></i></button>
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom: 20px;">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Waktu berlangsung <span class="required">*</span>
                                </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <fieldset>
                                    <div class="control-group">
                                        <div class="controls">
                                            <div class="input-prepend input-group">
                                                <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                                <input type="text" name="waktuBerlangsung" id="reservation-time" class="form-control" value="" />
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="reset">Reset</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/public/vendors/moment/min/moment.min.js"></script>
    <script>
        let waktuSekarang = moment().format("MM/DD/YYYY");
        let waktuBesok = moment().add(1, 'd').format("MM/DD/YYYY");
        document.getElementById("reservation-time").value = `${waktuSekarang} - ${waktuBesok}`;
    </script>