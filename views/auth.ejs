<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                <form method="post" action="/auth/login">
                    <h1>Form Masuk</h1>
                    <% if (pesan.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= pesan %>
                        </div>
                        <% } %>
                            <!-- <div class="parsley-required text-danger p-2">This value is required.</div> -->
                            <div>
                                <input type="email" name="email" class="form-control" placeholder="Email" required="" value="<%= (typeof isiForm != 'undefined') ? isiForm.email : '' %> " />
                            </div>
                            <div>
                                <input type="password" name="password" class="form-control" placeholder="Kata Sandi" required="" />
                            </div>
                            <div>
                                <button type="submit" class="btn btn-default submit" href="index.html">Masuk</button>
                                <a class="reset_pass" href="#">Lost your password?</a>
                            </div>

                            <div class="clearfix"></div>

                            <div class="separator">
                                <p class="change_link">Baru saja datang?
                                    <a href="#signup" class="to_register"> Buat Akun Baru </a>
                                </p>

                                <div class="clearfix"></div>
                                <br />

                                <div>
                                    <a href="/">
                                        <h1><i class="fa fa-paw"></i> Pungut Suara!</h1>
                                    </a>
                                    <!-- <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p> -->
                                </div>
                            </div>
                </form>
            </section>
        </div>

        <div id="register" class="animate form registration_form">
            <section class="login_content">
                <form method="post" action="/auth/register">
                    <h1>Buat Akun Baru</h1>
                    <% if (pesan.length > 0) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= pesan %>
                        </div>
                        <% } %>
                            <div>
                                <input type="text" name="nama" class="form-control" placeholder="Nama Lengkap" required="" value="<%= (typeof isiForm != 'undefined') ? isiForm.nama : '' %>" />
                            </div>
                            <div>
                                <input type="email" name="email" class="form-control" placeholder="Email" required="" value="<%= (typeof isiForm != 'undefined') ? isiForm.email : '' %> " />
                            </div>
                            <div>
                                <input type="password" name="password" class="form-control" placeholder="Kata Sandi" required="" />
                            </div>
                            <div>
                                <button type="submit" class="btn btn-default submit" href="index.html">Registrasi</button type="submit">
                  </div>

                  <div class="clearfix"></div>

                  <div class="separator">
                      <p class="change_link">Sudah memiliki akun ?
                          <a href="#signin" class="to_register"> Masuk </a>
                      </p>

                      <div class="clearfix"></div>
                      <br />

                      <div>
                          <a href="/"><h1><i class="fa fa-paw"></i> Pungut Suara!</h1></a>
                          <!-- <p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p> -->
                      </div>
                  </div>
              </form>
          </section>
      </div>
  </div>
</div>